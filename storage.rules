
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on profile pictures for anyone to see.
    match /profile-pictures/{userId}/{fileName} {
      allow read;
      // Allow write only if the user is authenticated and their UID matches the path.
      // This ensures users can only update their own profile picture.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // By default, deny all other read/write operations for security.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
